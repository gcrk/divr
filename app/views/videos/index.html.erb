<h1 class='title'>List of videos</h1>

<% @videos.each do |video| %>
<div class="videolist">
  <%= link_to image_tag((video.link.sub('https://www.youtube.com/watch?v=', 'http://img.youtube.com/vi/') + '/mqdefault.jpg'), :class => 'thumb'), video %>
  <h3><%= link_to video.name, video %></h3>
  <p>by: <%= video.user.name %></p>
</div>
<% end %>
