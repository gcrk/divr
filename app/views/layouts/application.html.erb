<!DOCTYPE html>
<html>
  <head>
    <title>Divr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>divR</h1>

    <nav>
      <%= link_to 'Home', root_path %>
      <%= link_to 'Videos', videos_path %>
      <%= link_to 'Diving Center', centers_path %>
      <%= link_to 'Add a Center', new_center_path %>
      <% if @current_user.present? %>
        <%= link_to 'Add Video', new_video_path %>
        <%= link_to 'My Dives', scubas_path %>
        <%= link_to "Logout #{ @current_user.name }", login_path, :method => 'delete' %>
      <% else %>
        <%= link_to 'Sign in', new_user_path %>
        <%= link_to 'Login', login_path %>
      <% end %>


    </nav>


    <%= yield %>
  </body>
</html>
